<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.sharetest.design.CircularImageView
        android:id="@+id/cv_send"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_search_black_24dp"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorBlack"
        app:civ_shadow_radius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cv_receive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sharetest.design.CircularImageView
        android:id="@+id/cv_receive"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_search_black_24dp"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorBlack"
        app:civ_shadow_radius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cv_send"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/cv_send"
        app:layout_constraintStart_toStartOf="@+id/cv_send"
        app:layout_constraintTop_toBottomOf="@+id/cv_send" />

    <TextView
        android:id="@+id/tv_receive_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receive"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/cv_receive"
        app:layout_constraintStart_toStartOf="@+id/cv_receive"
        app:layout_constraintTop_toBottomOf="@id/cv_receive"/>

</androidx.constraintlayout.widget.ConstraintLayout>